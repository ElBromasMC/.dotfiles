
# Status bar

#
# Read `man 5 sway-bar` for more information about this section.
#

bar {
    status_command while ${HOME}/.config/sway/scripts/statusbar.sh; do sleep 1; done
    position bottom
    colors {
        statusline #ffffff
        background #000000AA
        inactive_workspace #323232AA #323232AA #5c5c5cAA
    }
}

